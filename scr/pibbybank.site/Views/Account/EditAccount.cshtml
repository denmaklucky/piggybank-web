@model AccountViewModel

<div class="row">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div>
            <label asp-for="Type"></label>
            <select asp-for="Type" class="form-control">
                <option value="Undefined">No choose</option>
                <option value="Cash">Cash</option>
                <option value="Card">Card</option>
                <option value="BankAccount">Bank Account</option>
                <option value="Deposit">Deposit</option>
                <option value="Credit">Credit</option>
            </select>
        </div>
        <div>
            <label asp-for="Currency"></label>
            <input asp-for="Currency" class="form-control" />
        </div>
        <div>
            <label asp-for="Balance"></label>
            <input asp-for="Balance" class="form-control" />
        </div>
        <div class="row">
            <div class="col-3">
                <label>
                    In Archived
                    <input type="checkbox" class="p-switch" asp-for="IsArchived">
                    <div class="p-switch__slider"></div>
                </label>
            </div>
            <div class="col-3">
                <label>
                    Is Deleted
                    <input type="checkbox" class="p-switch" asp-for="IsDeleted">
                    <div class="p-switch__slider"></div>
                </label>
            </div>
        </div>
        <div class="text-right">
            <button class="p-button--positive" type="submit">Save</button>
            <a asp-action="Index" class="p-button--neutral">Cancel</a>
        </div>
    </form>

</div>