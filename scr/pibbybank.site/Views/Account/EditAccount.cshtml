@model AccountViewModel

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select asp-for="Type" class="form-control">
                <option value="Undefined">No choose</option>
                <option value="Cash">Cash</option>
                <option value="Card">Card</option>
                <option value="BankAccount">Bank Account</option>
                <option value="Deposit">Deposit</option>
                <option value="Credit">Credit</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Currency"></label>
            <input asp-for="Currency" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Balance"></label>
            <input asp-for="Balance" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IsDeleted"></label>
            <select asp-for="IsDeleted" class="form-control">
                <option value="true">Is Deleted</option>
                <option value="false">Isn't Deleted</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="IsArchived"></label>
            <select asp-for="IsArchived" class="form-control">
                <option value="true">Is Required</option>
                <option value="false">Isn't Required</option>
            </select>
        </div>
        <div class="text-right">
            <button class="btn btn-success" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>