@model CategoryViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    @*<label asp-for="HexColor"></label>
        <div></div>*@
    <div class="form-group">
        <label asp-for="CategoryType"></label>
        <select asp-for="CategoryType" class="form-control">
            <option value="">No choose</option>
            <option value="Income">Income</option>
            <option value="Expense">Expense</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IsRequired"></label>
        <select asp-for="IsRequired" class="form-control">
            <option value="true">Is Required</option>
            <option value="false">Isn't Required</option>
        </select>
    </div>
    <div class="text-right">
        <button class="btn btn-success" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>