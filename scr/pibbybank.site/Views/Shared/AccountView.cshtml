@model AccountDto

<div class="card m-1 p-1">
    <div class="row no-gutters">
        <div class="col-md-2">
            <bold>@Model.Type</bold>
        </div>
        <div class="col-md-6">
            <h5>@Model.Title</h5>
        </div>
        <div class="col-md-2">
            @{
                var balanceAndCurrency = $"{Model.Balance} {Model.Currency}";
            }
            <span>@balanceAndCurrency</span>
        </div>
        <div class="col-md-2 text-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="font-size:12px;">Edit</a>
        </div>
    </div>
</div>