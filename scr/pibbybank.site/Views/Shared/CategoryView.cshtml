@model CategoryDto

<div class="p-card">
    <div class="row">
        <div class="col-2">
            <div style="background:@Model.HexColor;border-radius:20px;height:30px; width:30px"></div>
        </div>
        <div class="col-8">
            <h5 class="p-card__title">@Model.Title</h5>
            <p class="p-card__content">Описания этой категории</p>
        </div>
        <div class="col-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="p-button--neutral">Edit</a>
        </div>
    </div>
</div>