<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/css/*.css" />
    <link rel="stylesheet" href="https://assets.ubuntu.com/v1/vanilla-framework-version-2.1.0.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <title>PiggyBank</title>
</head>
<body>
    <header id="navigation" class="p-navigation hg-pink">
        <div class="p-navigation__banner">
            <div class="p-navigation__logo">
                <a class="p-navigation__link" href="#">
                    <img class="p-navigation__image" src="~/content/logo2.png">
                </a>
            </div>
            <a href="#navigation" class="p-navigation__toggle--open" title="menu">Menu</a>
            <a href="#navigation-closed" class="p-navigation__toggle--close" title="close menu">Close menu</a>
        </div>
        <nav class="p-navigation__nav">
            <span class="u-off-screen">
                <a href="#main-content">Jump to main content</a>
            </span>
            <ul class="p-navigation__links" role="menu">
                <li class="p-navigation__link is-selected" role="menuitem">
                    <a asp-controller="Account" asp-action="Index">Accounts</a>
                </li>
                <li class="p-navigation__link" role="menuitem">
                    <a asp-controller="Category" asp-action="Index">Categories</a>
                </li>
            </ul>
            <ul class="p-navigation__links p-language-switcher" role="menu">
                <li class="p-navigation__link">
                    @await Component.InvokeAsync("AccountsSummary")

                </li>
            </ul>
        </nav>
    </header>
