<div class="@Class" @onclick="OnCardClick" @onmouseover="OnMouserOver" @onmouseout="OnMouseOut">
    <div class="card-body">
        <div class="d-inline">
            <bold>@Account.Type</bold>
        </div>
        <div class="d-inline">
            @Account.Title
        </div>
        <div class="d-inline float-right">
            <div class="d-inline">
                @($"{Account.Balance} {Account.Currency}")
            </div>
            <div class="d-inline" style="font-size:15px;color:darkgrey;">
                ...
            </div>
        </div>
    </div>
</div>

@code {

    public string Class { get; set; } = "b-bottom";

    [Parameter]
    public AccountInfoDto Account { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnCardClick { get; set; }

    public void OnMouserOver()
    {
        Class = "b-bottom pointer";
    }

    public void OnMouseOut()
    {
        Class = "b-bottom";
    }
}